<h1>Show <%= singular_table_name.titleize %></h1>

<div class="row">
  <div class="col-md-12">
    <div class="btn-group" role="group" aria-label="...">
      <%%= link_to fa_icon("pencil"), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "btn btn-success", role: "button" %>
      <%%= link_to fa_icon("arrow-left"), <%= index_helper %>_path, class: "btn btn-default", role: "button" %>
    </div>
  </div>
</div>

<dl class="dl-horizontal">
<% attributes.reject(&:password_digest?).each do |attribute| -%>
  <dt><%= attribute.human_name %>:</dt>
  <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>
<% end -%>
</dl>
