<div class="container">
  <h1>Show Course</h1>

  <div class="row">
    <div class="col-md-12">
      <div class="btn-group" role="group" aria-label="...">
        <%= link_to fa_icon("pencil"), edit_course_path(@course), class: "btn btn-success", role: "button" %>
        <%= link_to fa_icon("arrow-left"), courses_path, class: "btn btn-secondary", role: "button" %>
      </div>
    </div>
  </div>

  <dl class="dl-horizontal">
    <dt>Name:</dt>
    <dd><%= @course.title %></dd>
    <dt>Description:</dt>
    <dd><%= @course.description %></dd>
    <dt>Objective:</dt>
    <dd><%= @course.objective %></dd>
    <dt>Reason why:</dt>
    <dd><%= @course.reason_why %></dd>
  </dl>

  <%= ancestor_breadcrumbs_for(@course) %>

  <div class="row">
    <div class="col col-md-3">
      <% if @course.descendants.any? %>
        <%= descendant_list_for(@course) %>
      <% end %>
    </div>
    <div class="col col-md-9">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="definitions-tab" data-toggle="tab" href="#definitions" role="tab" aria-controls="definitions" aria-selected="false">Definitions</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="av-aids-tab" data-toggle="tab" href="#av-aids" role="tab" aria-controls="av-aids" aria-selected="false">Audio Visual Aids</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="qual-questions-tab" data-toggle="tab" href="#qual-questions" role="tab" aria-controls="qual-questions" aria-selected="false">Qualifying Questions</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade" id="definitions" role="tabpanel" aria-labelledby="definitions-tab">
          <% if @course.definitions.any? %>
            <% @course.definitions.each do |defn| %>
              <%= defn.word %>
            <% end %>
          <% else %>
           No Definitions
          <% end %>
        </div>
        <div class="tab-pane fade" id="av-aids" role="tabpanel" aria-labelledby="av-aids-tab">
          <% if @course.audio_visuals.any? %>
            <% @course.audio_visuals.each do |av| %>
              <%= av.source_url %>
            <% end %>
          <% else %>
           No Audio Visual Aids
          <% end %>
        </div>
        <div class="tab-pane fade" id="qual-questions" role="tabpanel" aria-labelledby="qual-questions-tab">
          <% if @course.qualifications.any? %>
            <% @course.qualifications.each do |qual| %>
              <%= qual.question %>
            <% end %>
          <% else %>
           No Questions
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
